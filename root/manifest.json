{
  "manifest_version": 3,
  "name": "Prompt Library",
  "version": "1.0.0",
  "default_locale": "es",
  "action": {
    "default_popup": "popup/index.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "storage"
  ],
  "background": {
    "service_worker": "background/worker.js"
  }
}
